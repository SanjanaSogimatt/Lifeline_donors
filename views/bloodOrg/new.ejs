<%- include('../partials/navbar') %>
<div class="row">
    <h1 class="text-center">NEW REGISTERTION</h1>
    <div class="col-6 offset-3">
  <div class="card mt-5 mb-3">
    <div class="card-body">
  <p>This website is designed to help people find blood donors.</p>
  <p>If you want to donate, please fill out the form below.</p>
  <form action="/community" method="post" novalidate class="validatedForm">
    <div class="mb-3">
        <label for="name" class="form-label">Name:</label>
    <input type="text" name="donor[name]" placeholder="Your Name" class="form-control"  required>
    <label for="age" class="form-label">Age:</label>
    <input type="number" name="Age" placeholder="Enter Your age" class="form-control"  required>
</div>
<div class="mb-3">
    <label for="weight" class="form-label">Weight: </label>
    <input type="number" name="donor[weight]" place holder="Enter Your Weight" class="form-control"  required>
</div>
<div class="mb-3">
    <label for="dob" class="form-label">Date of birth: </label>
    <input type="date" id="dob" name="donor[dob]" class="form-control"  required>
</div>
<div class="mb-3">
    <label for="Gender" class="form-label">Select Your Gender</label>

    <select id="Gender" name="donor[gender]" class="form-control"  required>
        <option value="Man">Men</option>
        <option value="Women">Women</option>
        <option value="Transgender">Transgender</option>
        <option value="Prefer not to say">Prefer not to say</option>
    </select>
</div>
<div class="mb-3">
    <label for="Blood Type" class="form-label">Choose a Blood Type:</label>

<select id="Blood Type" name="donor[blood_group]" class="form-control"  required>
  <option value="A+">A+</option>
  <option value="B+">B+</option>
  <option value="AB+">AB+</option>
  <option value="O+" selected>O+</option>
  <option value="A-">A-</option>
  <option value="B-">B-</option>
  <option value="AB-">AB-</option>
  <option value="O-">O-</option>
</select>
</div>
<div class="mb-3">
<label for="email" class="form-label">Email: </label>
    <input type="text" name="donor[email]" placeholder="Your Email" class="form-control"  required>
    <label for="phone" class="form-label">Phone: </label>
    <input type="tel" name="donor[phone]" id="phone" class="form-control"  required>
    <label for="address" class="form-label">Address:</label>
    <input type="text" name="donor[address]" placeholder="Your address" class="form-control"  required>
    <label for="city" class="form-label">City</label>
    <input type="text" id="city" name="donor[city]" class="form-control"  required>
    <input type="submit" value="Submit" class="btn btn-success mt-3">
</div>
  </form>
</div>
</div>
</div>
</div>
<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
(() => {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  const forms = document.querySelectorAll('.validatedForm')
  
  // Loop over them and prevent submission
  Array.from(forms)
  .forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }

      form.classList.add('was-validated')
    }, false)
  })
})()
</script>
