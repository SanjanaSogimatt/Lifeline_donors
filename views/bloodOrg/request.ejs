<%- include('../partials/navbar') %>
<div class="row">
    <div class="col-6 offset-3">
<body>
    <h1 class="text-center">Create a request</h1>
    <form action="/community" method="post">
        <label for="name" class="form-label">Name: </label>
        <input type="text" placeholder="Your Name" id="name" name="request[name]" class="form-control" required>
        <label for="blood_group"  class="form-label">Enter the blood type required:</label>
        <select class="form-select" id="Blood Type" name="request[blood_group]">
            <option value="A+">A+</option>
            <option value="B+">B+</option>
            <option value="AB+">AB+</option>
            <option value="O+" selected>O+</option>
            <option value="A-">A-</option>
            <option value="B-">B-</option>
            <option value="AB-">AB-</option>
            <option value="O-">O-</option>
          </select>
        <label for="email" class="form-label" >Email: </label>
    <input type="text" placeholder="Your Email" name="request[email]"class="form-control" required>
    <label for="phone" class="form-label" >Phone: </label>
    <input type="tel" id="phone" name="request[phone]"class="form-control" required>
    <label for="address" class="form-label" >Address:</label>
    <input type="text" name="request[address]" placeholder="Your address" class="form-control" required>
        <label for="city" class="form-label" >City</label>
    <input type="text" id="city" name="request[city]" class="form-control" required>
    <button type="submit" class="btn btn-primary form-control mt-4" required>Create a request</button>
    </form>
</div>
</div>
