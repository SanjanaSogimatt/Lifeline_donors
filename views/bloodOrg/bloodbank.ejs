<%- include('../partials/navbar') %>
<h1 class="text-center">Here are some blood banks</h1>
<div class="row">
    <div class="col-6 offset-3">
<div class="card">
    <div class="card-body">
    
    <% for(bank of bloodbanks){ %>
        <h2 class="fs-4"><%= bank.name %></h2>
        <h2 class="fs-4"><%= bank.address %></h2>
        <h2 class="fs-4"><%= bank.email %></h2>
        <h2 class="fs-4"><%= bank.phone %></h2>
        <% } %>
    <a href="/community/newbloodbank" class="btn btn-info mt-4">create a new blood bank</a>
</div>
</div>
</div>
</div>
